<div class="container">
  <div class="row">
    <div class="col-md-8">
      <h1>Articles</h1>
      <% @articles.each do |article| %>
        <div class="card">
          <div class="card-header">
            <%= link_to article.title, article_path(article) %>
          </div>
          <div class="card-body">
            <p class="card-text"><%= article.content %></p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
