<div class="container">
  <div class="form-group">
    <%= form_with model: article do |f| %>
      <%= f.label :title %>
      <%= f.text_field :title, :class => "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :content %>
    <%= f.text_area :content, :class=>"form-control" %>
  </div>
    <%= f.submit :class => "btn btn-primary" %>
    <% end %>
  </div>
</div>
