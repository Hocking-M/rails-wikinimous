<div class="container">
  <div class="form-group">
    <%= simple_form_for @article do |f| %>
      <%= f.input :title, autofocus: true, input_html: { class: "form-control" } %>
      <%= f.input :content, as: :text, input_html: { rows: 10, class: "form-control" } %>
      <%= f.submit class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
